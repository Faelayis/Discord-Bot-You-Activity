{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "Node",
		"allowJs": true,
		"types": ["node"],
		"typeRoots": ["./node_modules/@types"]
	},
	"lib": ["esnext"]
}
